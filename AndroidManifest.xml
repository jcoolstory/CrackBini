<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.crackbini"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="4" >
    </uses-sdk>

    <uses-permission android:name="android.permission.VIBRATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/bini_icon"
        android:label="@string/app_name" >
        <activity
            android:label="@string/app_name"
            android:name="com.jcoolstory.crackbinidemo.CrackBini"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jcoolstory.crackbinidemo.BiniGameActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:label="Score"
            android:name="com.jcoolstory.crackbinidemo.ScoreView"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
        <activity
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:name="com.google.ads.AdActivity" />
        <activity android:name="com.jcoolstory.crackbinidemo.BiniPreference"  android:theme="@android:style/Theme.Light.NoTitleBar">
        </activity>
        <activity android:name="com.jcoolstory.crackbinidemo.BiniScoreBoard" android:theme="@android:style/Theme.NoTitleBar"></activity>
    </application>

</manifest>